generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  username String   @unique
  password String
  contacts Contact[]
}

model Contact {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  firstName  String
  lastName   String
  phoneNumber String
  userId     String @db.ObjectId
  user       User   @relation(fields: [userId], references: [id])
}